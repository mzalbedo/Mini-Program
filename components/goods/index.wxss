/**index.wxss**/
.container {
    display: flex;
    position: relative;
    flex-direction: column;
    margin-top: 30rpx;
}

.description {
    width: 100%;
    bottom: 0rpx;
    background-color: rgb(255, 255, 255);
    display: flex;
    justify-content: space-around;
    /* flex-direction: row-reverse; */
}

.title {
    font-size: 32rpx;
    color: #0e0e0e;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.author {
    font-size: 32rpx;
    color: #fc0202;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.no-data {
  color: #333333;
  font-size: 30rpx;
}

.item-box {
  margin-bottom: 30rpx;
}

.item-title {
  color: #999999;
  font-size: 30rpx;
  display: block; 
  width: 750rpx; 
  overflow: hidden; 
  white-space: nowrap;
  word-wrap: break-word;
  text-overflow: ellipsis;
}

.item-image {
  width: 750rpx; 
  height: 400rpx; 
  background-color: #eeeeee;
}

.item-buttons {
  height: 20px;
  flex-direction:row;
}

.item-button {
  width: 350rpx;
  margin: 12rpx;
  height: 20px;
  float: left;
  color: #999999;
  font-size: 30rpx;
  text-align: center;
  flex-direction:row;
}