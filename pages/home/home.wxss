/* pages/home/home.wxss */.row-container {
  position: relative;
  width: 100%;
  margin-bottom: 12px;
  background-color: #fff;
  box-sizing: border-box;
}

.row-container .header {
  display: block;
  height: 44px;
  line-height: 44px;
  padding: 0 12px;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.7);
  border-bottom: 1px solid #e2e2e3;
  margin-bottom: 5px;
}

.row-container .header .left {
  float: left;
  color: #444;
  font-size: 14px;
  position: relative;
  padding-left: 25px;
}

.bilibili-index-sprite {
  display: inline-block;
  background-repeat: no-repeat;
  position: absolute;
  top: 12px;
  left: 0;
}

.bilibili-index-hot {
  background-position: -5px -215px;
  width: 20px;
  height: 20px;
}

.row-container .header .right {
  float: right;
  font-size: 14px;
  color: #999;
  position: relative;
  padding-right: 25px;
}

.row-container .header .hot {
  font-size: 13px;
  color: #ffb30f;
  padding: 0 0 0 25px;
}




